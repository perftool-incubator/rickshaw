{
  "workshop": {
    "schema": {
      "version": "2020.03.02"
    }
  },
  "userenv": {
    "name": "rhubi7",
    "label": "Red Hat UBI 7",
    "origin": {
      "image": "registry.access.redhat.com/ubi7/ubi",
      "tag": "latest"
    },
    "properties": {
      "packages": {
        "type": "rpm",
        "manager": "yum"
      }
    }
  },
  "requirements": [
    {
      "name": "python38",
      "type": "distro",
      "distro_info": {
        "packages": [
          "rh-python38",
          "rh-python38-python-pip"
        ]
      }
    },
    {
      "name": "post-python",
      "type": "manual",
      "manual_info": {
        "commands": [
          "alternatives --install /usr/bin/python3 python3 /opt/rh/rh-python38/root/usr/bin/python3 1",
          "alternatives --install /usr/bin/pip3 pip3 /opt/rh/rh-python38/root/usr/bin/pip3 1"
        ]
      }
    },
    {
      "name": "core-compiling",
      "type": "distro",
      "distro_info": {
        "packages": [
          "diffutils",
          "gcc",
          "libtool",
          "autoconf",
          "automake",
          "make"
        ]
      }
    },
    {
      "name": "epel7",
      "type": "manual",
      "manual_info": {
        "commands": [
          "yum -v -y install https://dl.fedoraproject.org/pub/epel/epel-release-latest-7.noarch.rpm"
        ]
      }
    },
    {
      "name": "utils",
      "type": "distro",
      "distro_info": {
        "packages": [
          "curl",
          "tar",
          "cpio",
          "xz",
          "gzip",
          "jq",
          "git",
          "cpio",
          "findutils",
          "hostname",
          "iputils",
          "iproute",
          "perl-core"
        ]
      }
    },
    {
      "name": "core-perl",
      "type": "manual",
      "manual_info": {
        "commands": [
          "curl --silent -L https://cpanmin.us | /usr/bin/perl - App::cpanminus"
        ]
      }
    },
    {
      "name": "core-node",
      "type": "distro",
      "distro_info": {
        "packages": [
          "nodejs"
        ]
      }
    }
  ]
}
