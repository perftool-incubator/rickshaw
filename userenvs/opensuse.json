{
  "workshop": {
    "schema": {
      "version": "2020.03.02"
    }
  },
  "userenv": {
    "name": "opensuse",
    "label": "OpenSUSE Leap",
    "origin": {
      "image": "registry.opensuse.org/opensuse/tumbleweed",
      "tag": "latest"
    },
    "properties": {
      "packages": {
        "type": "pkg",
        "manager": "zypper"
      }
    }
  },
  "requirements": [
    {
      "name": "python39",
      "type": "distro",
      "distro_info": {
        "packages": [
          "python39",
          "python39-pip"
        ]
      }
    },
    {
      "name": "python-symlink",
      "type": "manual",
      "manual_info": {
        "commands": [
          "rm /usr/bin/python3",
          "ln -s /usr/bin/python3.9 /usr/bin/python3"
        ]
      }
    },
    {
      "name": "utils",
      "type": "distro",
      "distro_info": {
        "packages": [
          "curl",
          "tar",
          "cpio",
          "xz",
          "gzip",
          "jq",
          "git",
          "cpio",
          "findutils",
          "hostname",
          "iputils",
          "iproute"
        ]
      }
    },
    {
      "name": "core-compiling",
      "type": "distro",
      "distro_info": {
        "packages": [
          "diffutils",
          "gcc",
          "libtool",
          "autoconf",
          "automake",
          "make"
        ]
      }
    },
    {
      "name": "util-linux",
      "type": "distro",
      "distro_info": {
        "packages": [
          "util-linux"
        ]
      }
    },
    {
      "name": "core-perl",
      "type": "distro",
      "distro_info": {
        "packages": [
          "perl-App-cpanminus"
        ]
      }
    },
    {
      "name": "core-node",
      "type": "distro",
      "distro_info": {
        "packages": [
          "nodejs"
        ]
      }
    }
  ]
}
