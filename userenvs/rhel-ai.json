{
  "workshop": {
    "schema": {
      "version": "2023.02.16"
    }
  },
  "userenv": {
    "name": "rhel-ai",
    "label": "RHEL AI",
    "origin": {
      "image": "quay.io/kvalin/instructlab-training",
      "tag": "latest-jul10"
    },
    "properties": {
      "platform": [
        {
          "architecture": "x86_64"
        },
        {
          "architecture": "aarch64"
        }
      ],
      "packages": {
        "type": "rpm",
        "manager": "dnf"
      }
    }
  },
  "requirements": [
    {
      "name": "python3",
      "type": "distro",
      "distro_info": {
        "packages": [
          "python3",
          "python3-pip",
          "python3-devel"
        ]
      }
    },
    {
      "name": "utils",
      "type": "distro",
      "distro_info": {
        "packages": [
          "curl",
          "tar",
          "cpio",
          "gzip",
          "jq",
          "git",
          "cpio",
          "findutils",
          "hostname",
          "iputils",
          "iproute",
          "elfutils-libelf",
          "openssl",
          "xz",
          "libcap",
          "libzstd",
          "numactl"
        ]
      }
    },
    {
      "name": "core-perl",
      "type": "distro",
      "distro_info": {
        "packages": [
          "perl-App-cpanminus"
        ]
      }
    },
    {
      "name": "core-node",
      "type": "distro",
      "distro_info": {
        "packages": [
          "nodejs"
        ]
      }
    }
  ]
}
